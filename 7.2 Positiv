public class Positiv {
	
	int a;
	String e = "Illegal parameters";
//	PositivCheck tal = new PositivCheck(4);
	
	
	//constructor
	public Positiv(int heltal) {
		
		if (heltal > 0) {
			this.a = heltal;
		} else if (heltal < 1){
			throw new IllegalArgumentException(e);
		}
			
	}
	
	
	//method get
	public int get() {
		return a;
		
	}
	
	//	method add
	public void add(Positiv tal2) {
		a = a + tal2.get();
		
	}
	
	//method mul
	public void mul(Positiv tal2) {
		a = a * tal2.get();
	}
	
	// method sub
	public void sub(Positiv tal2) {
		
		if (a - tal2.get() < 1 ) {
			throw new IllegalArgumentException(e);
		} else {
			a = a - tal2.get();
		}
		
	}
	
	// method toString
	public String toString() {
		return "" + a;
		
	}
	
}
